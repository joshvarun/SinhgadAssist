                android:layout_height="wrap_content"
                android:text="Mechanical"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EnTC"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrical"
                android:textSize="15sp"
                android:padding="16dp"
                android:textColor="@android:color/black"/>

            <TextView
